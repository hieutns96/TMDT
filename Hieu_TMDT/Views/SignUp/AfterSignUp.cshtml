@model Hieu_TMDT.Models.ConfirmSignUpVMD

@{
    ViewBag.Title = "ConfirmAccount";
    Layout = "~/Views/Shared/_Layout_temp.cshtml";
}
<style>
    .mytable tr, td {
        padding: 20px;
        padding-bottom: 10px;
    }
</style>
<div class="form-horizontal" style="padding:20px; border:1px solid #e0d8d8; border-radius:5px; width:400px;margin-left:auto; margin-right:auto;">
    <div style="border-bottom:1px solid  #e0d8d8;"><center><h2>Xác nhận tài khoản</h2></center></div>
    <div style="margin-left:auto;margin-right:auto:">
        @using (Html.BeginForm("AfterSignUp", "SignUp", FormMethod.Post))
        {
            <table class="mytable">
                <tr>
                    <td>Username</td>
                    <td>
                        @Html.TextBoxFor(model => model.Username, htmlAttributes: new { @class = "form-control", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>
                        @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control", @autofocus = "autofocus", @id = "email" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>Mã xác nhận</td>
                    <td>
                        @Html.TextBoxFor(model => model.Barcode, htmlAttributes: new { @class = "form-control", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(model => model.Barcode, "", new { @class = "text-danger" })

                    </td>
                </tr>
                <tr>
                    <td colspan="2">@Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })</td>
                </tr>
                <tr>
                    <td colspan="2">
                        <center>
                            <button type="submit" style="padding:10px; font-size:15px;">Xác nhận</button>
                        </center>
                    </td>
                </tr>
            </table>

        }
    </div>
</div>
