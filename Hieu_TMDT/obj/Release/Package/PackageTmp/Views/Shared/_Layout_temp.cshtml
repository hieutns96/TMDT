<script>




    function ViewCatalog() {
        window.location.href = "/Catalog/ViewCatalog";
    }
    $(document).ready(function () {
        //nút logout
        $("#signout").click(function () {
            $.ajax({
                url: "/Login/Logout",
                method: "POST",
                success: function () {
                    window.location.href = "/Home/Index";
                }
            })
        })
        //nút search
        $("#btnsearch").click(function () {
            var searchname = $("#txtsearch").val();
            //alert(searchname);
            $.ajax({
                url: "/Layout/EncodeName",
                data: { s: searchname },
                method: "post",
                success: function (result) {
                    window.location.href = "/Catalog/ViewCatalog/" + result;
                }
            })
        })

        $.ajax({
            url: "/Layout/GetListNXB",
            method: "post",
            success: function (result) {
                var html = "";
                for (var i = 0; i < result.length; i++) {
                    html += "<li value='" + result[i].MaNXB + "' class='nxb' style='cursor:pointer'><a>" + result[i].TenNXB + "</a></li>";

                }
                html += "<li  value='all' onclick='ViewCatalog()'><a>T?t c?</a></li>"
                $("#nhaxuatban").html(html);
                $(".nxb").click(function () {
                    var id = $(this).val();


                    $.ajax({
                        url: "/Layout/EncodeNXB",
                        method: "post",
                        data: { s: id },
                        success: function (encode) {
                            var str = "all";
                            if (id != "all") {
                                str = result[id - 1].TenNXB.replace(/\ /g, '-');
                            }
                            //alert(encode);
                            window.location.href = "/Catalog/ViewCatalog/" + encode + "/" + str;
                        }
                    })

                })
            }
        });
        $.ajax({
            url: "/Layout/GetListDanhMuc",
            method: "post",
            success: function (result) {
                var html = "";
                
                for (var i = 0; i < result.length; i++) {
                    html += "<li value='" + result[i].MaDM + "'  class='dm' style='cursor:pointer'><a>" + result[i].TenDM + "</a></li>"
                }
                html += "<li  value='all' onclick='ViewCatalog()'><a>Tất cả</a></li>"
                $("#danhmuc").html(html);

                $(".dm").click(function () {
                    var id = $(this).val();
                    if (id == 'all') { window.location.href = "/Catalog/ViewCatalog"; }
                    $.ajax({
                        url: "/Layout/EncodeDM",
                        method: "post",
                        data: { s: id },
                        success: function (encode) {
                            //alert(encode);
                            var str = "all";
                            if (id != "all")
                            {
                                str = result[id-1].TenDM.replace(/\ /g, '-');
                            }

                            window.location.href = "/Catalog/ViewCatalog/" + encode + "/" + str;
                        }
                    })
                })
            }
        });
    })



</script>
