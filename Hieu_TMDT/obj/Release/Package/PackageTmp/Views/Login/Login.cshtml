@model Hieu_TMDT.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    //using (Html.BeginForm("Login","Login",FormMethod.Post))
   // Layout = "~/Views/Shared/_Layout_temp.cshtml";
}
@{
    if (Session["nguoidung"] != null)
    {
        <script>
            window.location.href = "/Home/Index";
        </script>
    }
}
<style>
    .mystyle {
        font-size: 20px !important;
    }
</style>
<div>
   
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h2>Login</h2>
        @using (Ajax.BeginForm("Login", "Login", new AjaxOptions { }))
        {

            @Html.AntiForgeryToken()
            <label>Tên người dùng</label><br />
            @Html.TextBoxFor(model => model.user.USERNAME, htmlAttributes: new { @class = "form-control", @autofocus = "autofocus" })
            @Html.ValidationMessageFor(model => model.user.USERNAME, "", new { @class = "text-danger" })
            <br />

            <label>Password</label><br />
            @Html.TextBoxFor(model => model.user.PASSWORD, htmlAttributes: new { @class = "form-control mystyle", @autofocus = "autofocus", @type = "password" })
            @Html.ValidationMessageFor(model => model.user.PASSWORD, "", new { @class = "text-danger" })
            <br />
            <button type="submit" style="padding:10px; font-size:15px; margin-bottom:10px;" class="btn btn-info">Đăng nhập</button><br />
            @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
            @Html.ActionLink("Quên mật khẩu?", "ForgotPass", "Login")

        }
    </div>
    </div>

